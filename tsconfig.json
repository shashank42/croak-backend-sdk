      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"],
    "types": ["node", "node-global-url"]
